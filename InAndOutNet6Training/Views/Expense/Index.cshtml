@model IEnumerable<InAndOutNet6Training.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-3">
            <h2 class="text-primary">List of Expenses</h2>
        </div>
        <div class="col align-self-center">
            <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("Create", "Expense")'" title="Create new Expense" autofocus>
                <span class="bi bi-plus"></span>
            </button>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped" style="width:100%">
            <caption>List of the expenses</caption>
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Cost
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="50%">@item.Cost.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td width="50%"><b>Total:</b></td>
                    <td width="50%"><b>@Model.Sum(x => x.Cost).ToString("C", new System.Globalization.CultureInfo("pt-BR"))</b></td>
                </tr>
            </tfoot>
        </table>
    }
    else
    {
        <p>No items found.</p>
    }
</div>
