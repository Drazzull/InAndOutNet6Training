@model IEnumerable<InAndOutNet6Training.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-3">
            <h2 class="text-primary">List of Expenses</h2>
        </div>
        <div class="col align-self-center">
            <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("Create", "Expense")'" title="Create new Expense" autofocus>
                <span class="bi bi-plus"></span>
            </button>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped" style="width:100%">
            <caption>List of the expenses</caption>
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Cost
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="45%">@expense.Name</td>
                        <td width="45%">@expense.Cost.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                        <td width="10%">
                            <div class="w-100 btn-group" role="group">
                                <button type="button" class="btn btn-primary btn-sm mx-1" onclick="location.href='@Url.Action("Update", "Expense", new { Id = expense.Id })'" title="Update the Expense" autofocus>
                                    <span class="bi bi-pencil-fill"></span>
                                </button>
                                <button type="button" class="btn btn-warning btn-sm mx-1" onclick="location.href='@Url.Action("Delete", "Expense", new { Id = expense.Id })'" title="Delete the Expense" autofocus>
                                    <span class="bi bi-trash3"></span>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td width="33%"><b>Total:</b></td>
                    <td width="33%"><b>@Model.Sum(x => x.Cost).ToString("C", new System.Globalization.CultureInfo("pt-BR"))</b></td>
                    <td />
                </tr>
            </tfoot>
        </table>
    }
    else
    {
        <p>No items found.</p>
    }
</div>
