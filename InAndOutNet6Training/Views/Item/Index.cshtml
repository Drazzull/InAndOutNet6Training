@model IEnumerable<InAndOutNet6Training.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-3">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col align-self-center">
            <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("Create", "Item")'" title="Create new Item" autofocus>
                <span class="bi bi-plus"></span>
            </button>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped" style="width:100%">
            <caption>List of the borrowed items</caption>
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="33%">@item.ItemName</td>
                        <td width="33%">@item.Borrower</td>
                        <td width="33%">@item.Lender</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items found.</p>
    }
</div>